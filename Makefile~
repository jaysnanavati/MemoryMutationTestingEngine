CC=gcc
CFLAGS=-g -Wall -Ihashset -Iarraylist
VPATH = hashset

all: hashset.o fixed_arraylist.o
	$(CC) $(CFLAGS) -o Controller controller.c arraylist/fixed_arraylist.o hashset/hashset.o valgrindEval.c CFGEval.c gstats.c libxml_commons.c -I/usr/include/libxml2  -Llibconfig -Llibxml2 -lconfig -lxml2
fixed_arraylist.o:
	cd arraylist && make

hashset.o:
	cd hashset && make

clean:
	rm -f *.o all
	rm -rf mutation_out
	cd hashset && make clean
	cd arraylist && make clean

.PHONY: clean
